<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pibesprojects.workouttracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CustomCalendar"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".ChooseWorkout"
            android:parentActivityName=".MainActivity">
            android:theme="@style/Theme.AppCompat" >

            <!--android:theme="@style/Theme.AppCompat" fajny widok -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".ChooseRepsAndSets"
            android:parentActivityName=".MainActivity">
            android:theme="@style/Theme.AppCompat" >

            <!--android:theme="@style/Theme.AppCompat" fajny widok -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".ChooseBodyPart"
            android:parentActivityName=".MainActivity">
            android:theme="@style/Theme.AppCompat" >

            <!--android:theme="@style/Theme.AppCompat" fajny widok -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".ShowProgress"
            android:parentActivityName=".MainActivity">
            android:theme="@style/Theme.AppCompat" >

            <!--android:theme="@style/Theme.AppCompat" fajny widok -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>



</manifest>